<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Panel Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .cfe-bg-pattern {
      background-image: url("data:image/svg+xml;base64,");
    }

    /* Estilos espec√≠ficos para m√≥viles */
    @media (max-width: 767px) {
      .table-header-group {
        display: none;
      }

      .mobile-card {
        display: block;
        border: 1px solid #e2e8f0;
        border-radius: 0.75rem;
        margin-bottom: 1rem;
        padding: 1rem;
        background: white;
      }

      .mobile-card-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
      }

      .mobile-card-label {
        font-weight: 600;
        color: #4a5568;
        margin-right: 0.5rem;
      }

      .mobile-card-actions {
        display: flex;
        justify-content: flex-end;
        gap: 0.5rem;
        margin-top: 1rem;
      }
    }
  </style>
</head>

<body class="min-h-screen bg-gradient-to-br from-blue-50 to-gray-100 pb-12 cfe-bg-pattern">
  <div class="container mx-auto p-4 cfe-bg-pattern">
    <!-- Bot√≥n regresar al men√∫ -->
    <div class="mb-6">
      <a href="/admin/dashboard"
        class="inline-flex items-center gap-2 bg-gray-200 hover:bg-blue-200 text-blue-800 font-semibold px-4 py-2 rounded-xl shadow transition">
        <span class="text-lg">‚Üê</span>
        <span>Regresar al men√∫</span>
      </a>
    </div>

    <!-- Encabezado -->
    <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
      <h1 class="text-2xl md:text-3xl font-extrabold text-blue-900 drop-shadow tracking-tight flex items-center gap-2">
        <span>üîß</span> Reparaciones 2025 <span class="text-xs font-semibold text-gray-500">(Admin)</span>
      </h1>
      <a href="/logout"
        class="flex items-center bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-xl font-semibold shadow gap-1 transition">
        <span class="hidden md:inline">Cerrar sesi√≥n</span> <span class="text-xl">‚èª</span>
      </a>
    </div>

    <!-- Filtros y bot√≥n "Nueva reparaci√≥n" alineado a la derecha -->
    <div class="bg-white/80 rounded-2xl shadow-lg p-4 mb-8">
      <div class="flex flex-col md:flex-row md:items-center gap-2 mb-2">
        <!-- Filtros -->
        <form class="flex flex-col md:flex-row items-center gap-2 flex-1" method="GET" action="/admin/reparaciones">
          <input name="q" value="<%= q %>"
            class="border border-gray-300 focus:border-blue-400 focus:ring focus:ring-blue-100 p-2 rounded-lg outline-none transition w-full md:w-56"
            placeholder="üîé Buscar (Econ√≥mico, Orden...)" />
          <select name="order"
            class="border border-gray-300 p-2 rounded-lg focus:border-blue-400 transition w-full md:w-auto">
            <option value="fecha_desc" <%=order==="fecha_desc" ? "selected" : "" %>>M√°s recientes</option>
            <option value="fecha_asc" <%=order==="fecha_asc" ? "selected" : "" %>>M√°s antiguos</option>
            <option value="economico_az" <%=order==="economico_az" ? "selected" : "" %>>Econ√≥mico A-Z</option>
            <option value="economico_za" <%=order==="economico_za" ? "selected" : "" %>>Econ√≥mico Z-A</option>
            <option value="importe_mayor" <%=order==="importe_mayor" ? "selected" : "" %>>Importe mayor a menor</option>
            <option value="importe_menor" <%=order==="importe_menor" ? "selected" : "" %>>Importe menor a mayor</option>
            <option value="pagado_si" <%=order==="pagado_si" ? "selected" : "" %>>Pagados primero</option>
            <option value="pagado_no" <%=order==="pagado_no" ? "selected" : "" %>>No pagados primero</option>
          </select>
          <select name="pagado"
            class="border border-gray-300 p-2 rounded-lg focus:border-blue-400 transition w-full md:w-auto">
            <option value="" <%=pagado==="" ? "selected" : "" %>>Todos</option>
            <option value="si" <%=pagado==="si" ? "selected" : "" %>>Solo pagados</option>
            <option value="no" <%=pagado==="no" ? "selected" : "" %>>Solo no pagados</option>
          </select>
          <button
            class="bg-blue-500 hover:bg-blue-600 text-white font-bold px-4 py-2 rounded-lg shadow transition-all w-full md:w-auto"
            type="submit">
            Buscar
          </button>
        </form>
        <!-- Bot√≥n "Nueva reparaci√≥n" alineado a la derecha -->
        <div class="flex md:justify-end w-full md:w-auto">
          <button id="btnShowModalCrear"
            class="bg-green-500 hover:bg-green-600 text-white font-bold px-4 py-2 rounded-lg shadow transition-all md:ml-4 w-full md:w-auto"
            type="button">
            ‚ûï <span class="hidden md:inline">Nueva</span> reparaci√≥n
          </button>
        </div>
      </div>
      <div class="flex mt-2 gap-2">
        <form method="GET" action="/admin/reparaciones">
          <button class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-lg font-semibold transition-all"
            type="submit">
            Limpiar filtro
          </button>
        </form>
      </div>
    </div>

    <!-- Modal crear reparaci√≥n -->
    <div id="modalCrear" class="fixed inset-0 z-50 bg-black/40 flex items-center justify-center hidden">
      <div class="bg-white rounded-2xl shadow-xl p-6 md:p-8 max-w-2xl w-full mx-4 relative">
        <button id="btnHideModalCrear" type="button"
          class="absolute right-4 top-4 text-gray-400 hover:text-red-500 text-2xl font-bold transition">√ó</button>
        <h2 class="text-xl font-bold text-blue-700 mb-4 flex items-center gap-2">‚ûï Nueva reparaci√≥n</h2>
        <form method="POST" action="/admin/reparaciones" class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <input name="economico" placeholder="Econ√≥mico"
            class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg col-span-1 md:col-span-2 outline-none transition"
            required />
          <input name="fecha" type="date" class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg"
            required />
          <input name="taller" placeholder="Taller" class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg"
            required />
          <input name="cotiza" placeholder="Cotiza"
            class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg" />
          <input name="concepto" placeholder="Concepto"
            class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg" />
          <input name="orden" placeholder="Orden" class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg" />
          <input name="importe" type="number" step="0.01" placeholder="Importe"
            class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg" />
          <input name="autorizacion" placeholder="Autorizaci√≥n"
            class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg" />
          <input name="pagos" placeholder="Pagos" class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg" />
          <div class="flex items-center gap-3 col-span-1 md:col-span-2">
            <label class="mr-2 font-semibold text-gray-700">Pagado</label>
            <input type="checkbox" name="pagado" value="true" class="w-5 h-5 accent-blue-500" />
            <input name="num_contrato" placeholder="N√∫m. Contrato"
              class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg flex-1" />
          </div>
          <textarea name="observacion" placeholder="Observaci√≥n"
            class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg col-span-1 md:col-span-2"
            rows="2"></textarea>
          <button type="submit"
            class="bg-green-500 hover:bg-green-600 text-white py-2 px-6 rounded-lg col-span-1 md:col-span-2 font-bold shadow transition">
            Guardar
          </button>
        </form>
      </div>
    </div>

    <!-- Tabla de Reparaciones -->
    <div class="overflow-x-auto mb-8 rounded-xl shadow border border-gray-200 bg-white/90">
      <!-- Vista de escritorio (tabla) -->
      <table class="min-w-full text-xs md:text-sm hidden md:table">
        <thead>
          <tr class="bg-blue-100 text-blue-900">
            <th class="px-3 py-2 font-bold">Econ√≥mico</th>
            <th class="px-3 py-2 font-bold">Fecha</th>
            <th class="px-3 py-2 font-bold">Taller</th>
            <th class="px-3 py-2 font-bold">Cotiza</th>
            <th class="px-3 py-2 font-bold">Concepto</th>
            <th class="px-3 py-2 font-bold">Orden</th>
            <th class="px-3 py-2 font-bold">Importe</th>
            <th class="px-3 py-2 font-bold">Autorizaci√≥n</th>
            <th class="px-3 py-2 font-bold">Pagos</th>
            <th class="px-3 py-2 font-bold">Pagado</th>
            <th class="px-3 py-2 font-bold">Observaci√≥n</th>
            <th class="px-3 py-2 font-bold">N√∫m. Contrato</th>
            <th class="px-3 py-2 font-bold bg-blue-100 sticky right-0 z-10 w-16 text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (reparaciones.length===0) { %>
            <tr>
              <td colspan="13" class="p-4 text-center text-gray-400">
                No hay reparaciones
              </td>
            </tr>
            <% } %>
              <% reparaciones.forEach(rep=> { %>
                <tr class="hover:bg-blue-50 border-t transition">
                  <td class="px-3 py-2 font-mono">
                    <%= rep.economico %>
                  </td>
                  <td class="px-3 py-2">
                    <%= rep.fecha %>
                  </td>
                  <td class="px-3 py-2">
                    <%= rep.taller %>
                  </td>
                  <td class="px-3 py-2">
                    <%= rep.cotiza %>
                  </td>
                  <td class="px-3 py-2">
                    <%= rep.concepto %>
                  </td>
                  <td class="px-3 py-2">
                    <%= rep.orden %>
                  </td>
                  <td class="px-3 py-2 text-right">$<%= rep.importe %>
                  </td>
                  <td class="px-3 py-2">
                    <%= rep.autorizacion %>
                  </td>
                  <td class="px-3 py-2">
                    <%= rep.pagos %>
                  </td>
                  <td class="px-3 py-2 font-semibold">
                    <span
                      class="inline-block px-2 py-0.5 rounded-full text-xs <%= rep.pagado ? 'bg-green-100 text-green-700' : 'bg-yellow-100 text-yellow-800' %>">
                      <%= rep.pagado ? "S√≠" : "No" %>
                    </span>
                  </td>
                  <td class="px-3 py-2 max-w-xs truncate">
                    <%= rep.observacion %>
                  </td>
                  <td class="px-3 py-2">
                    <%= rep.num_contrato %>
                  </td>
                  <!-- Acciones ICONOS sticky -->
                  <td class="px-3 py-2 flex gap-2 bg-white sticky right-0 z-10 justify-center">
                    <button type="button"
                      class="bg-yellow-400 hover:bg-yellow-500 text-white rounded-full w-8 h-8 flex items-center justify-center transition"
                      onclick="showEditForm(<%= rep.id %>)" title="Editar">
                      <span class="text-lg">‚úèÔ∏è</span>
                    </button>
                    <form action="/admin/reparaciones/<%= rep.id %>/delete" method="POST" class="inline"
                      onsubmit="return confirm('¬øSeguro que quieres eliminar esta reparaci√≥n?')">
                      <button type="submit"
                        class="bg-red-500 hover:bg-red-600 text-white rounded-full w-8 h-8 flex items-center justify-center transition"
                        title="Eliminar">
                        <span class="text-lg">üóëÔ∏è</span>
                      </button>
                    </form>
                  </td>
                </tr>
                <% }) %>
        </tbody>
      </table>

      <!-- Vista m√≥vil (tarjetas) -->
      <div class="md:hidden p-2">
        <% if (reparaciones.length===0) { %>
          <div class="p-4 text-center text-gray-400">
            No hay reparaciones
          </div>
          <% } %>
            <% reparaciones.forEach(rep=> { %>
              <div class="mobile-card">
                <div class="mobile-card-row">
                  <span class="mobile-card-label">Econ√≥mico:</span>
                  <span class="font-mono">
                    <%= rep.economico %>
                  </span>
                </div>
                <div class="mobile-card-row">
                  <span class="mobile-card-label">Fecha:</span>
                  <span>
                    <%= rep.fecha %>
                  </span>
                </div>
                <div class="mobile-card-row">
                  <span class="mobile-card-label">Taller:</span>
                  <span>
                    <%= rep.taller %>
                  </span>
                </div>
                <div class="mobile-card-row">
                  <span class="mobile-card-label">Concepto:</span>
                  <span>
                    <%= rep.concepto %>
                  </span>
                </div>
                <div class="mobile-card-row">
                  <span class="mobile-card-label">Importe:</span>
                  <span class="font-semibold">$<%= rep.importe %></span>
                </div>
                <div class="mobile-card-row">
                  <span class="mobile-card-label">Pagado:</span>
                  <span
                    class="inline-block px-2 py-0.5 rounded-full text-xs <%= rep.pagado ? 'bg-green-100 text-green-700' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= rep.pagado ? "S√≠" : "No" %>
                  </span>
                </div>
                <div class="mobile-card-actions">
                  <button type="button"
                    class="bg-yellow-400 hover:bg-yellow-500 text-white rounded-full w-8 h-8 flex items-center justify-center transition"
                    onclick="showEditForm(<%= rep.id %>)" title="Editar">
                    <span class="text-lg">‚úèÔ∏è</span>
                  </button>
                  <form action="/admin/reparaciones/<%= rep.id %>/delete" method="POST" class="inline"
                    onsubmit="return confirm('¬øSeguro que quieres eliminar esta reparaci√≥n?')">
                    <button type="submit"
                      class="bg-red-500 hover:bg-red-600 text-white rounded-full w-8 h-8 flex items-center justify-center transition"
                      title="Eliminar">
                      <span class="text-lg">üóëÔ∏è</span>
                    </button>
                  </form>
                </div>
              </div>
              <% }) %>
      </div>
    </div>
  </div>

  <!-- Modal editar reparaci√≥n -->
  <div id="editModal" class="fixed inset-0 z-50 bg-black/40 flex items-center justify-center hidden">
    <div class="bg-white rounded-2xl shadow-xl p-6 md:p-8 max-w-xl w-full mx-4 relative">
      <button id="closeEditModal" type="button"
        class="absolute right-4 top-4 text-gray-400 hover:text-red-500 text-2xl font-bold transition">√ó</button>
      <h2 class="text-xl font-bold text-blue-700 mb-4 flex items-center gap-2">‚úèÔ∏è Editar reparaci√≥n</h2>
      <form id="editForm" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <input type="hidden" name="id" id="edit_id" />
        <input name="economico" id="edit_economico" placeholder="Econ√≥mico"
          class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg col-span-1 md:col-span-2 outline-none transition"
          required />
        <input name="fecha" type="date" id="edit_fecha"
          class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg" required />
        <input name="taller" id="edit_taller" placeholder="Taller"
          class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg" required />
        <input name="cotiza" id="edit_cotiza" placeholder="Cotiza"
          class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg" />
        <input name="concepto" id="edit_concepto" placeholder="Concepto"
          class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg" />
        <input name="orden" id="edit_orden" placeholder="Orden"
          class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg" />
        <input name="importe" type="number" step="0.01" id="edit_importe" placeholder="Importe"
          class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg" />
        <input name="autorizacion" id="edit_autorizacion" placeholder="Autorizaci√≥n"
          class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg" />
        <input name="pagos" id="edit_pagos" placeholder="Pagos"
          class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg" />
        <div class="flex items-center gap-3 col-span-1 md:col-span-2">
          <label class="mr-2 font-semibold text-gray-700">Pagado</label>
          <input type="checkbox" name="pagado" id="edit_pagado" value="true" class="w-5 h-5 accent-blue-500" />
          <input name="num_contrato" id="edit_num_contrato" placeholder="N√∫m. Contrato"
            class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg flex-1" />
        </div>
        <textarea name="observacion" id="edit_observacion" placeholder="Observaci√≥n"
          class="border border-gray-300 focus:border-blue-500 p-2 rounded-lg col-span-1 md:col-span-2"
          rows="2"></textarea>
        <button type="submit"
          class="bg-yellow-500 hover:bg-yellow-600 text-white py-2 px-6 rounded-lg col-span-1 md:col-span-2 font-bold shadow transition">
          Guardar cambios
        </button>
      </form>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    // --- Modal para CREAR reparaci√≥n ---
    const btnShowModalCrear = document.getElementById('btnShowModalCrear');
    const btnHideModalCrear = document.getElementById('btnHideModalCrear');
    const modalCrear = document.getElementById('modalCrear');
    btnShowModalCrear.addEventListener('click', () => {
      modalCrear.classList.remove('hidden');
    });
    btnHideModalCrear.addEventListener('click', () => {
      modalCrear.classList.add('hidden');
    });
    // Cerrar con fondo click (opcional)
    modalCrear.addEventListener('click', (e) => {
      if (e.target === modalCrear) modalCrear.classList.add('hidden');
    });

    // --- Modal de edici√≥n ---
    const reparaciones = <%- JSON.stringify(reparaciones) %>;
    function showEditForm(id) {
      const rep = reparaciones.find(r => r.id === id);
      if (!rep) return;
      document.getElementById('edit_id').value = rep.id;
      document.getElementById('edit_economico').value = rep.economico;
      document.getElementById('edit_fecha').value = rep.fecha ? rep.fecha.slice(0, 10) : '';
      document.getElementById('edit_taller').value = rep.taller || '';
      document.getElementById('edit_cotiza').value = rep.cotiza || '';
      document.getElementById('edit_concepto').value = rep.concepto || '';
      document.getElementById('edit_orden').value = rep.orden || '';
      document.getElementById('edit_importe').value = rep.importe || '';
      document.getElementById('edit_autorizacion').value = rep.autorizacion || '';
      document.getElementById('edit_pagos').value = rep.pagos || '';
      document.getElementById('edit_num_contrato').value = rep.num_contrato || '';
      document.getElementById('edit_observacion').value = rep.observacion || '';
      document.getElementById('edit_pagado').checked = !!rep.pagado;
      document.getElementById('editForm').action = `/admin/reparaciones/${rep.id}/edit`;
      document.getElementById('editModal').classList.remove('hidden');
    }
    document.getElementById('closeEditModal').onclick = () => {
      document.getElementById('editModal').classList.add('hidden');
    };
    // Cerrar con fondo click (opcional)
    document.getElementById('editModal').addEventListener('click', (e) => {
      if (e.target.id === 'editModal') document.getElementById('editModal').classList.add('hidden');
    });
  </script>
</body>

</html>