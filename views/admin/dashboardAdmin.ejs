<!DOCTYPE html>
<html lang="es" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menú Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        darkMode: "class",
      };
    </script>
  </head>
  <body
    class="min-h-screen bg-gradient-to-br from-blue-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 text-gray-800 dark:text-gray-200"
  >
    <div class="container mx-auto px-4 py-6 md:py-8">
      <div
        class="flex flex-col sm:flex-row justify-between items-center mb-6 gap-4"
      >
        <h1
          class="text-xl sm:text-2xl md:text-3xl font-bold text-blue-800 dark:text-blue-300 tracking-tight drop-shadow text-center sm:text-left"
        >
          Panel de Opciones (Admin)
        </h1>

        <div class="flex gap-2">
          <button
            id="toggleDark"
            class="bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 px-3 py-1 rounded shadow hover:bg-gray-300 dark:hover:bg-gray-600 transition"
            title="Modo oscuro/claro"
          >
            🌙
          </button>

          <a
            href="/logout"
            class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-xl font-semibold shadow transition-all flex items-center gap-1 text-sm sm:text-base"
          >
            <span>Salir</span> <span class="text-xl">⏻</span>
          </a>
        </div>
      </div>

      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
      >
        <!-- Reparaciones -->
        <a
          href="/admin/reparaciones"
          class="bg-white dark:bg-gray-700 hover:bg-blue-50 dark:hover:bg-gray-600 shadow-xl rounded-2xl flex flex-col items-center p-4 sm:p-5 group transition border hover:border-blue-300 dark:border-gray-600"
        >
          <span
            class="text-4xl sm:text-5xl mb-2 text-blue-400 group-hover:text-blue-600"
            >🛠️</span
          >
          <span
            class="text-base sm:text-lg font-semibold text-blue-700 dark:text-blue-300 group-hover:underline"
            >Reparaciones</span
          >
          <span
            class="text-xs text-gray-500 dark:text-gray-400 mt-1 text-center"
            >Gestión de reparaciones</span
          >
        </a>

        <!-- Indisponibilidad -->
        <a
          href="/admin/indisponibilidad"
          class="bg-white dark:bg-gray-700 hover:bg-green-50 dark:hover:bg-gray-600 shadow-xl rounded-2xl flex flex-col items-center p-4 sm:p-5 group transition border hover:border-green-300 dark:border-gray-600"
        >
          <span
            class="text-4xl sm:text-5xl mb-2 text-green-400 group-hover:text-green-600"
            >🚗</span
          >
          <span
            class="text-base sm:text-lg font-semibold text-green-700 dark:text-green-300 group-hover:underline"
            >Indisponibilidad</span
          >
          <span
            class="text-xs text-gray-500 dark:text-gray-400 mt-1 text-center"
            >Unidades fuera de servicio</span
          >
        </a>

        <!-- Inventario Vehículos -->
        <a
          href="/admin/inventario-vehiculos"
          class="bg-white dark:bg-gray-700 hover:bg-blue-50 dark:hover:bg-gray-600 shadow-xl rounded-2xl flex flex-col items-center p-4 sm:p-5 group transition border hover:border-blue-300 dark:border-gray-600"
        >
          <span
            class="text-4xl sm:text-5xl mb-2 text-blue-400 group-hover:text-blue-600"
            >🚗</span
          >
          <span
            class="text-base sm:text-lg font-semibold text-blue-700 dark:text-blue-300 group-hover:underline"
            >Inventario Vehículos</span
          >
          <span
            class="text-xs text-gray-500 dark:text-gray-400 mt-1 text-center"
            >Ver y editar inventario de vehículos</span
          >
        </a>

        <!-- Bajas Vehículos -->
        <a
          href="/admin/bajas"
          class="bg-white dark:bg-gray-700 hover:bg-pink-50 dark:hover:bg-gray-600 shadow-xl rounded-2xl flex flex-col items-center p-4 sm:p-5 group transition border hover:border-pink-300 dark:border-gray-600"
        >
          <span
            class="text-4xl sm:text-5xl mb-2 text-pink-400 group-hover:text-pink-600"
            >🚗</span
          >
          <span
            class="text-base sm:text-lg font-semibold text-pink-700 dark:text-pink-300 group-hover:underline"
            >Bajas Vehículos</span
          >
          <span
            class="text-xs text-gray-500 dark:text-gray-400 mt-1 text-center"
            >Ver y editar baja de vehículos</span
          >
        </a>

        <!-- Factibilidad -->
        <a
          href="/admin/factibilidad"
          class="bg-white dark:bg-gray-700 hover:bg-indigo-50 dark:hover:bg-gray-600 shadow-xl rounded-2xl flex flex-col items-center p-4 sm:p-5 group transition border hover:border-indigo-300 dark:border-gray-600"
        >
          <span
            class="text-4xl sm:text-5xl mb-2 text-indigo-400 group-hover:text-indigo-600"
            >📊</span
          >
          <span
            class="text-base sm:text-lg font-semibold text-indigo-700 dark:text-indigo-300 group-hover:underline"
            >Factibilidad</span
          >
          <span
            class="text-xs text-gray-500 dark:text-gray-400 mt-1 text-center"
            >Gestión de factibilidad</span
          >
        </a>

        <a
          href="/admin/siniestros"
          class="bg-white dark:bg-gray-700 hover:bg-cyan-50 dark:hover:bg-gray-600 shadow-xl rounded-2xl flex flex-col items-center p-4 sm:p-5 group transition border hover:border-cyan-300 dark:border-gray-600"
        >
          <span
            class="text-4xl sm:text-5xl mb-2 text-cyan-400 group-hover:text-cyan-600"
            >👨‍🔧</span
          >
          <span
            class="text-base sm:text-lg font-semibold text-cyan-700 dark:text-cyan-300 group-hover:underline"
            >siniestros</span
          >
          <span
            class="text-xs text-gray-500 dark:text-gray-400 mt-1 text-center"
            >Gestión de siniestros</span
          >
        </a>

        <!-- Genérico 2 -->
        <a
          href="#"
          class="bg-white dark:bg-gray-700 hover:bg-lime-50 dark:hover:bg-gray-600 shadow-xl rounded-2xl flex flex-col items-center p-4 sm:p-5 group transition border hover:border-lime-300 dark:border-gray-600"
        >
          <span
            class="text-4xl sm:text-5xl mb-2 text-lime-400 group-hover:text-lime-600"
            >📝</span
          >
          <span
            class="text-base sm:text-lg font-semibold text-lime-700 dark:text-lime-300 group-hover:underline"
            >Menú</span
          >
        </a>

        <!-- Genérico 3 -->
        <a
          href="#"
          class="bg-white dark:bg-gray-700 hover:bg-red-50 dark:hover:bg-gray-600 shadow-xl rounded-2xl flex flex-col items-center p-4 sm:p-5 group transition border hover:border-red-300 dark:border-gray-600"
        >
          <span
            class="text-4xl sm:text-5xl mb-2 text-red-400 group-hover:text-red-600"
            >⚙️</span
          >
          <span
            class="text-base sm:text-lg font-semibold text-red-700 dark:text-red-300 group-hover:underline"
            >Menú</span
          >
        </a>
      </div>
    </div>

    <script>
      const html = document.documentElement;
      const toggleDark = document.getElementById("toggleDark");

      if (localStorage.getItem("theme") === "dark") {
        html.classList.add("dark");
        toggleDark.textContent = "☀️";
      } else {
        html.classList.remove("dark");
        toggleDark.textContent = "🌙";
      }

      toggleDark.addEventListener("click", () => {
        html.classList.toggle("dark");
        const isDark = html.classList.contains("dark");
        toggleDark.textContent = isDark ? "☀️" : "🌙";
        localStorage.setItem("theme", isDark ? "dark" : "light");
      });
    </script>
  </body>
</html>
