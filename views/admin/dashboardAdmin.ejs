<!DOCTYPE html>
<html lang="es" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Panel Admin - CFE México</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              cfe: {
                primary: "#009640", // Verde CFE
                secondary: "#005542", // Verde oscuro CFE
                light: "#e6f5ec", // Verde claro CFE
                accent: "#ffcc00", // Amarillo CFE
              },
            },
          },
        },
      };
    </script>
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Open Sans", sans-serif;
      }
      .cfe-bg-pattern {
        background-image: url("data:image/svg+xml;base64,");
      }
      .card-hover {
        transition: all 0.3s ease;
      }
      .card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body class="min-h-screen bg-gray-50 dark:bg-gray-900 cfe-bg-pattern">
    <div class="container mx-auto px-4 py-6 md:py-8 max-w-7xl">
      <!-- Header -->
      <div
        class="flex flex-col sm:flex-row justify-between items-center mb-8 gap-4"
      >
        <div class="flex items-center">
          <div class="bg-cfe-primary p-2 rounded-lg mr-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-white"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z"
                clip-rule="evenodd"
              />
            </svg>
          </div>
          <div>
            <h1
              class="text-xl sm:text-2xl md:text-3xl font-bold text-cfe-primary dark:text-cfe-accent tracking-tight"
            >
              Panel de Administración
            </h1>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Comisión Federal de Electricidad
            </p>
          </div>
        </div>

        <div class="flex gap-3 items-center">
          <button
            id="toggleDark"
            class="p-2 rounded-full bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
            title="Modo oscuro/claro"
          >
            <svg
              id="darkIcon"
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
              />
            </svg>
            <svg
              id="lightIcon"
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 hidden"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
                clip-rule="evenodd"
              />
            </svg>
          </button>

          <a
            href="/logout"
            class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg font-semibold shadow transition-all flex items-center gap-2 text-sm sm:text-base"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z"
                clip-rule="evenodd"
              />
            </svg>
            <span class="hidden sm:inline">Cerrar sesión</span>
          </a>
        </div>
      </div>

      <!-- Tarjetas de opciones - Primera fila (3 items) -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
        <!-- Reparaciones -->
        <a
          href="/admin/reparaciones"
          class="bg-white dark:bg-gray-800 shadow-lg rounded-xl overflow-hidden card-hover group border border-gray-200 dark:border-gray-700"
        >
          <div class="bg-cfe-primary p-4 flex justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
              />
            </svg>
          </div>
          <div class="p-5">
            <h3
              class="text-lg font-bold text-gray-800 dark:text-gray-200 group-hover:text-cfe-primary mb-1"
            >
              Reparaciones
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Gestión de reparaciones de vehículos
            </p>
          </div>
        </a>

        <!-- Indisponibilidad -->
        <a
          href="/admin/indisponibilidad"
          class="bg-white dark:bg-gray-800 shadow-lg rounded-xl overflow-hidden card-hover group border border-gray-200 dark:border-gray-700"
        >
          <div class="bg-cfe-secondary p-4 flex justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
              />
            </svg>
          </div>
          <div class="p-5">
            <h3
              class="text-lg font-bold text-gray-800 dark:text-gray-200 group-hover:text-cfe-secondary mb-1"
            >
              Indisponibilidad
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Unidades fuera de servicio
            </p>
          </div>
        </a>

        <!-- Inventario Vehículos -->
        <a
          href="/admin/inventario-vehiculos"
          class="bg-white dark:bg-gray-800 shadow-lg rounded-xl overflow-hidden card-hover group border border-gray-200 dark:border-gray-700"
        >
          <div class="bg-green-600 p-4 flex justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"
              />
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"
              />
            </svg>
          </div>
          <div class="p-5">
            <h3
              class="text-lg font-bold text-gray-800 dark:text-gray-200 group-hover:text-green-600 mb-1"
            >
              Inventario Vehículos
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Ver y editar inventario de vehículos
            </p>
          </div>
        </a>
      </div>

      <!-- Tarjetas de opciones - Segunda fila (3 items) -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Bajas Vehículos -->
        <a
          href="/admin/bajas"
          class="bg-white dark:bg-gray-800 shadow-lg rounded-xl overflow-hidden card-hover group border border-gray-200 dark:border-gray-700"
        >
          <div class="bg-red-600 p-4 flex justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
              />
            </svg>
          </div>
          <div class="p-5">
            <h3
              class="text-lg font-bold text-gray-800 dark:text-gray-200 group-hover:text-red-600 mb-1"
            >
              Bajas Vehículos
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Ver y editar baja de vehículos
            </p>
          </div>
        </a>

        <!-- Factibilidad -->
        <a
          href="/admin/factibilidad"
          class="bg-white dark:bg-gray-800 shadow-lg rounded-xl overflow-hidden card-hover group border border-gray-200 dark:border-gray-700"
        >
          <div class="bg-indigo-600 p-4 flex justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
              />
            </svg>
          </div>
          <div class="p-5">
            <h3
              class="text-lg font-bold text-gray-800 dark:text-gray-200 group-hover:text-indigo-600 mb-1"
            >
              Factibilidad
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Gestión de factibilidad técnica
            </p>
          </div>
        </a>

        <!-- Siniestros -->
        <a
          href="/admin/siniestros"
          class="bg-white dark:bg-gray-800 shadow-lg rounded-xl overflow-hidden card-hover group border border-gray-200 dark:border-gray-700"
        >
          <div class="bg-amber-600 p-4 flex justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
              />
            </svg>
          </div>
          <div class="p-5">
            <h3
              class="text-lg font-bold text-gray-800 dark:text-gray-200 group-hover:text-amber-600 mb-1"
            >
              Siniestros
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Gestión de reportes de siniestros
            </p>
          </div>
        </a>
      </div>

      <!-- Footer -->
      <div class="mt-12 text-center">
        <p class="text-sm text-gray-500 dark:text-gray-400">
          © 2023 Comisión Federal de Electricidad. Todos los derechos
          reservados.
        </p>
      </div>
    </div>

    <script>
      // Modo oscuro/claro
      const html = document.documentElement;
      const toggleDark = document.getElementById("toggleDark");
      const darkIcon = document.getElementById("darkIcon");
      const lightIcon = document.getElementById("lightIcon");

      if (
        localStorage.getItem("theme") === "dark" ||
        (!localStorage.getItem("theme") &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        html.classList.add("dark");
        darkIcon.classList.add("hidden");
        lightIcon.classList.remove("hidden");
      } else {
        html.classList.remove("dark");
        darkIcon.classList.remove("hidden");
        lightIcon.classList.add("hidden");
      }

      toggleDark.addEventListener("click", () => {
        html.classList.toggle("dark");
        const isDark = html.classList.contains("dark");

        if (isDark) {
          darkIcon.classList.add("hidden");
          lightIcon.classList.remove("hidden");
          localStorage.setItem("theme", "dark");
        } else {
          darkIcon.classList.remove("hidden");
          lightIcon.classList.add("hidden");
          localStorage.setItem("theme", "light");
        }
      });
    </script>
  </body>
</html>
